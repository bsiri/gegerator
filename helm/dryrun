# Source: gegerator/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: gegerator
  labels:
    helm.sh/chart: gegerator-1.0.1-SNAPSHOT
    app.kubernetes.io/name: gegerator
    app.kubernetes.io/instance: gegerator
    app.kubernetes.io/version: "1.0.1-SNAPSHOT"
    app.kubernetes.io/managed-by: Helm
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: gegerator
    app.kubernetes.io/instance: gegerator
---
# Source: gegerator/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gegerator
  labels:
    helm.sh/chart: gegerator-1.0.1-SNAPSHOT
    app.kubernetes.io/name: gegerator
    app.kubernetes.io/instance: gegerator
    app.kubernetes.io/version: "1.0.1-SNAPSHOT"
    app.kubernetes.io/managed-by: Helm
spec:
  # gegerator is a stateful app so one replica and that's it
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: gegerator
      app.kubernetes.io/instance: gegerator
  template:
    metadata:
      labels:
        helm.sh/chart: gegerator-1.0.1-SNAPSHOT
        app.kubernetes.io/name: gegerator
        app.kubernetes.io/instance: gegerator
        app.kubernetes.io/version: "1.0.1-SNAPSHOT"
        app.kubernetes.io/managed-by: Helm
    spec:
      serviceAccountName: gegerator
      securityContext:
        {}
      containers:
        - name: gegerator
          securityContext:
            {}
          image: "bsiri/gegerator:1.0.1-SNAPSHOT"
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 8080
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: http
          readinessProbe:
            httpGet:
              path: /
              port: http
          resources:
            {}

NOTES:
1. Get the application URL by running these commands:
  export POD_NAME=$(kubectl get pods --namespace gegerator -l "app.kubernetes.io/name=gegerator,app.kubernetes.io/instance=gegerator" -o jsonpath="{.items[0].metadata.name}")
  export CONTAINER_PORT=$(kubectl get pod --namespace gegerator $POD_NAME -o jsonpath="{.spec.containers[0].ports[0].containerPort}")
  echo "Visit http://127.0.0.1:8080 to use your application"
  kubectl --namespace gegerator port-forward $POD_NAME 8080:$CONTAINER_PORT
